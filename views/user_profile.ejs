<%if( locals.user && locals.user.id == user_profile.id){%>
<!-- if user mathces then  show the form -->
<h1>My Profile</h1>
<br />
<img
  src="<%= user_profile.avatar%>"
  alt="<%= user_profile.name%>"
  width="200"
  height="200"
  style="border-radius: 100px; object-fit: cover"
/>
<br />
<br />
<p>Name : <%= user_profile.name%></p>
<p>Email : <%= user_profile.email%></p>
<br />
<form
  action="/users/update/<%=user_profile.id%>"
  method="post"
  enctype="multipart/form-data"
>
  <input
    type="text"
    name="name"
    placeholder="Your Name"
    value="<%= user_profile.name%>"
    required
  />
  <input
    type="text"
    name="email"
    placeholder="Your Name"
    value="<%= user_profile.email%>"
    required
  />
  <input type="file" name="avatar" placeholder="Profile Picture" />
  <input type="submit" value="Update" />
</form>

<%}else{%>
<!-- else show only the profile -->
<h1><%=user_profile.name+"'s"%> Profile</h1>
<br />
<img
  src="<%= user_profile.avatar%>"
  alt="<%= user_profile.name%>"
  width="200"
  height="200"
  style="border-radius: 100px; object-fit: cover"
/>
<br />
<br />
<p>Name : <%= user_profile.name%></p>
<p>Email : <%= user_profile.email%></p>
<%}%>
